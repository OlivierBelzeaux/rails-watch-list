<div class='hero'>
<div class='hero-opacity'></div>
<h1><%= @list.name %></h1>
</div>

<div class='container mt-5 mb-5'>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to "Delete", bookmark_path(bookmark), method: :delete , class: 'btn btn-outline-danger' %>
      </div>
    </div>
  <% end %>

  <div class='mt-5'>
    <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
    <%= link_to "back to index", lists_path, class: 'btn btn-primary' %>
  </div>

</div>
